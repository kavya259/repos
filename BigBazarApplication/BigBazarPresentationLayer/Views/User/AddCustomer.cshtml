@model BigBazarPresentationLayer.Models.CustomerModel

@{
    ViewData["Title"] = "AddCustomer";
}
@if(ViewBag.Error != null)
    {
    @ViewBag.Error
    }

<h5 style="color:orangered">Enter the New Customer Details</h5>
@section Scripts
{
    <script>
            $(document).ready(function () {
                $("#btnclick").click(function () {

                    if ($("#CustomerName").val().length < 3) {
                        alert("Please Provide Proper Name");
                        return false;
                    }

                    var bool = ValidateName($("#CustomerName").val());
                    if (bool == false) {
                        return false;
                    }


                    if ($("#PhoneNumber").val().length != 10) {
                        alert("Invalid Mobile Number.");
                        return false;
                    }

                    var data = $("#form").serialize();
                    $.ajax({
                        type: 'POST',
                        url: '/User/AddCustomer',
                        data: data,
                        success: function (data) {
                            alert("Customer Added Successfully");
                            location.reload();
                        },
                        error: function (response) {
                            alert("Something Went Wrong!Try Again Later");
                        }
                    })
                })
            })

            function ValidateName(name) {


                for (var i = 0; i < name.length; i++) {

                    if (!(name.charAt(i) >= 'a' && name.charAt(i) <= 'z') && !(name.charAt(i) >= 'A' && name.charAt(i) <= 'Z') && name.charAt(i) != ' ')
                    {

                        alert("Invalid Name");
                        return false;
                    }
                }
            }
    </script>
}

@*<h3>AddCustomer</h3>*@

<hr />
<div class="row">
    <div class="col-md-4">
        <form id="form" asp-action="AddCustomer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email"  required type="email"  class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber"  required type="number"  class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="reset" id="reset" onclick="location.reload()" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <input type="submit" id="btnclick" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<div>
    <a asp-action="Index">Back to User home  </a>
</div>
<div>
    <br> @Html.ActionLink("Logout ", "Index", "Home")  <br />

</div>
