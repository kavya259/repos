@{
    ViewBag.Title = "Home Page";
}
@if(ViewBag.Error != null)
    {
    @ViewBag.Error
    }
<br />
@section  scripts
{
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#category').mouseover(function () {
                $('#category').css('background-color', 'grey');

            })
            $('#category').mouseout(function () {
                $('#category').css('background-color', 'White');
            })
            $('#category').hover(function () {
                $('#list').finish().slideDown('slow');
                
            })
            $('#category').hover(function () {
                $('#list2').finish().slideUp('slow');
            })
            $('#exit').hover(function () {
                $('#list2').finish().slideDown('slow');
            })
            $('#exit').hover(function () {
                $('#list').finish().slideUp('slow');
            })

            

        })

    </script>
}
<body>

    <form>
        <nav>
            <table>
                <tr>

                    <span class="box" id="category"> Student Menu</span>
                    <hr\><hr\>
                </tr>
               
                <tr>
                    <span class="box" id="exit">About</span>
                </tr>
            </table>
        </nav>
    </form>



    <div id="list">
        <div>
            @Html.ActionLink("Add new student ", "AddStudent", "Student")
        </div>
        <div>
            @Html.ActionLink("Students list ", "GetAllStudents", "Student")

        </div>
    </div>

    <div id="list2">
        <div>
            @Html.ActionLink("About ", "About", "Home")
        </div>
        
    </div>

</body>

